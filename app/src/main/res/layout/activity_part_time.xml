<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="stateModel"
            type="com.gsy.ml.ui.common.StateModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/il_head"
            layout="@layout/comon_tarbar2_layout" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorFFFFFF"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--发单人查看-->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/PX20"
                            android:layout_marginRight="@dimen/PX20"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/PX16"
                                android:layout_marginTop="@dimen/PX20"
                                android:text=""
                                android:textColor="@color/color4d4d4d"
                                android:textSize="@dimen/PX34" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/PX16"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_moneys"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text=""
                                    android:textColor="@color/colorfbc700"
                                    android:textSize="@dimen/PX32" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lly"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/dizh_icon"
                                    android:drawablePadding="@dimen/PX4"
                                    android:gravity="center_vertical"
                                    android:text=""
                                    android:textSize="@dimen/PX20" />

                                <TextView

                                    android:id="@+id/tv_worktime"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/PX30"
                                    android:drawableLeft="@drawable/time1_icon"
                                    android:drawablePadding="@dimen/PX4"

                                    android:gravity="center_vertical"
                                    android:text=""
                                    android:textSize="@dimen/PX20" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.1px"
                                android:layout_marginTop="@dimen/PX20"
                                android:background="@color/colorcccccc" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/PX20"
                            android:layout_marginRight="@dimen/PX20"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/PX20"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="兼职类型："
                                    android:textSize="@dimen/PX28" />

                                <TextView
                                    android:id="@+id/tv_type_of_work"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/color292929"
                                    android:textSize="@dimen/PX28" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/PX20"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="招聘人数："
                                    android:textSize="@dimen/PX28" />

                                <TextView
                                    android:id="@+id/tv_people"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 人"
                                    android:textColor="@color/color292929"
                                    android:textSize="@dimen/PX28" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/PX16"
                            android:layout_marginBottom="@dimen/PX20"
                            android:layout_marginTop="@dimen/PX20"
                            android:background="@color/colorEEEEEE" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/PX20"
                            android:layout_marginRight="@dimen/PX20"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="@dimen/PX6"
                                    android:layout_height="@dimen/PX26"
                                    android:background="@color/colorfbc700" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/PX10"
                                    android:text="工作内容："
                                    android:textSize="@dimen/PX28" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"


                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/PX10"
                                android:paddingTop="@dimen/PX10">


                                <TextView
                                    android:id="@+id/tv_content"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/PX16"
                                    android:lineSpacingExtra="@dimen/PX8"
                                    android:textColor="@color/color292929"
                                    android:textSize="@dimen/PX28" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="@dimen/PX20"
                            android:layout_marginLeft="@dimen/PX20"
                            android:layout_marginRight="@dimen/PX20"

                            android:background="@color/colorcccccc" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/PX20"
                            android:layout_marginRight="@dimen/PX20"

                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="@dimen/PX6"
                                    android:layout_height="@dimen/PX26"
                                    android:background="@color/colorfbc700" />

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/PX10"
                                    android:text="工作时间："
                                    android:textSize="@dimen/PX28" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/PX10"
                                android:paddingTop="@dimen/PX10">


                                <TextView
                                    android:id="@+id/tv_times"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/PX16"
                                    android:lineSpacingExtra="@dimen/PX8"
                                    android:textColor="@color/color292929"
                                    android:textSize="@dimen/PX28" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:id="@+id/view_line"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/PX16"
                            android:layout_marginBottom="@dimen/PX20"
                            android:background="@color/colorEEEEEE" />

                        <LinearLayout
                            android:id="@+id/lly_adds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/PX20"
                            android:layout_marginLeft="@dimen/PX20"

                            android:layout_marginRight="@dimen/PX20"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="@dimen/PX6"
                                    android:layout_height="@dimen/PX26"
                                    android:background="@color/colorfbc700" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/PX10"
                                    android:text="工作地点："
                                    android:textSize="@dimen/PX28" />
                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/PX200">

                                <com.amap.api.maps.TextureMapView
                                    android:id="@+id/mv_add"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/PX20"
                                    android:background="@color/colorE7E7E7" />

                                <LinearLayout
                                    android:id="@+id/lly_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/PX20"
                                    android:layout_marginRight="@dimen/PX20"
                                    android:background="@color/colorFFFFFF"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/PX20">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/didian_icon" />

                                    <TextView
                                        android:id="@+id/tv_address"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/PX20"
                                        android:layout_marginRight="@dimen/PX20"
                                        android:layout_weight="1"
                                        android:textColor="@color/colortextnomal"
                                        android:textSize="@dimen/PX27" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/rights_icon" />

                                </LinearLayout>


                            </FrameLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/PX16"

                            android:background="@color/colorEEEEEE" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/PX40"
                            android:paddingBottom="@dimen/PX20"
                            android:paddingTop="@dimen/PX20"
                            android:layout_marginBottom="@dimen/PX60"
                            android:paddingRight="@dimen/PX40">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="注意事项：未标明收费的职位不会收取任何费用，若商家要求缴纳费用或保证金，请提高警惕并第一时间向我们举报。"
                                android:textColor="@color/color5E5E5E"
                                android:textSize="@dimen/PX28" />
                        </LinearLayout>


                    </LinearLayout>

                </ScrollView>

                <LinearLayout
                    android:id="@+id/lly_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_increase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorffc000"
                        android:gravity="center"
                        android:padding="@dimen/PX20"
                        android:text="立即沟通"
                        android:textColor="@color/colorFFFFFF"
                        android:textSize="@dimen/PX34" />

                </LinearLayout>
            </LinearLayout>

            <include
                android:visibility="gone"
                layout="@layout/widget_layout_empty"
                app:stateModel="@{stateModel}" />
        </FrameLayout>


    </LinearLayout>
</layout>
