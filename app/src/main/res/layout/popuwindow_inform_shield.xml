<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lly_tooltip"
            android:layout_width="@dimen/PX336"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/PX30"
            android:background="@color/colorFFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_inform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/jubao_icon"
                android:drawablePadding="@dimen/PX40"
                android:gravity="center_vertical"
                android:padding="@dimen/PX20"
                android:text="举报"
                android:textColor="@color/color4d4d4d"
                android:textSize="@dimen/PX30" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1px"
                android:background="@color/colorcccccc" />

            <TextView
                android:id="@+id/tv_shield"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pingbi_icon"
                android:drawablePadding="@dimen/PX40"
                android:gravity="center_vertical"
                android:padding="@dimen/PX20"
                android:text="屏蔽消息"
                android:textColor="@color/color4d4d4d"
                android:textSize="@dimen/PX30" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1px"
                android:background="@color/colorcccccc" />

            <TextView
                android:id="@+id/tv_look_over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/look_icon"
                android:drawablePadding="@dimen/PX40"
                android:gravity="center_vertical"
                android:padding="@dimen/PX20"
                android:text="查看简历"
                android:textColor="@color/color4d4d4d"
                android:textSize="@dimen/PX30" />

        </LinearLayout>

    </LinearLayout>

</layout>
