<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/PX20"
            android:layout_marginLeft="@dimen/PX20"
            android:layout_marginTop="@dimen/PX20"
            android:text="请选择取消订单的理由"
            android:textColor="@color/colorffc000"
            android:textSize="@dimen/PX40" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colortext"

            />

        <RadioGroup
            android:id="@+id/rg_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:drawableRight="@drawable/selector_rb1"
                android:paddingBottom="@dimen/PX20"
                android:paddingLeft="@dimen/PX20"
                android:paddingRight="@dimen/PX20"
                android:paddingTop="@dimen/PX20"
                android:text="与自身条件不符"
                android:textColor="@color/color292929"
                android:textSize="@dimen/PX30" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorcccccc"

                />

            <RadioButton
                android:id="@+id/rb_txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@drawable/selector_rb1"
                android:paddingBottom="@dimen/PX20"
                android:paddingLeft="@dimen/PX20"
                android:paddingRight="@dimen/PX20"
                android:paddingTop="@dimen/PX20"
                android:text="突然不想做了"
                android:textColor="@color/color292929"
                android:textSize="@dimen/PX30" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorcccccc"

                />

            <RadioButton
                android:id="@+id/rb_txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@drawable/selector_rb1"
                android:paddingBottom="@dimen/PX20"
                android:paddingLeft="@dimen/PX20"
                android:paddingRight="@dimen/PX20"
                android:paddingTop="@dimen/PX20"
                android:text="临时有事"
                android:textColor="@color/color292929"
                android:textSize="@dimen/PX30" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorcccccc"

                />

            <RadioButton
                android:id="@+id/rb_txt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@drawable/selector_rb1"
                android:paddingBottom="@dimen/PX20"
                android:paddingLeft="@dimen/PX20"
                android:paddingRight="@dimen/PX20"
                android:paddingTop="@dimen/PX20"
                android:text="其他原因"
                android:textColor="@color/color292929"
                android:textSize="@dimen/PX30" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorcccccc"

                />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/PX5"
            android:paddingLeft="@dimen/PX20"
            android:paddingTop="@dimen/PX20"
            android:text="注意: 每天会有一次免惩罚的取消机会,\n第二次以上就会有相应的惩罚制度哦!"
            android:textColor="@color/colorFF0000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/PX26"
            android:layout_marginTop="@dimen/PX40"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/PX40"
                android:background="@drawable/shape_cancel_ok"
                android:paddingBottom="@dimen/PX10"
                android:paddingLeft="@dimen/PX50"
                android:paddingRight="@dimen/PX50"
                android:paddingTop="@dimen/PX10"
                android:text="确定"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/PX30" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/PX40"
                android:background="@drawable/shape_cancel_no"
                android:paddingBottom="@dimen/PX10"
                android:paddingLeft="@dimen/PX50"
                android:paddingRight="@dimen/PX50"
                android:paddingTop="@dimen/PX10"
                android:text="取消"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/PX30" />

        </LinearLayout>
    </LinearLayout>
</layout>