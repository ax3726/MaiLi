<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorF6F3E9"
        android:orientation="vertical">

        <include
            android:id="@+id/il_head"
            layout="@layout/comon_tarbar_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PX3"
            android:background="@color/colorFFFFFF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/PX12"
                android:paddingLeft="@dimen/PX21"
                android:paddingRight="@dimen/PX21"
                android:paddingTop="@dimen/PX12">

                <RadioButton
                    android:id="@+id/rb_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/selector_heart1"
                    android:drawablePadding="@dimen/PX20"
                    android:text="好评"
                    android:textColor="@color/colorffc000"
                    android:textSize="@dimen/PX32" />

                <RadioButton
                    android:id="@+id/rb_dehiscence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/selector_heart2"
                    android:drawablePadding="@dimen/PX20"
                    android:text="中评"
                    android:textColor="@color/colorafafaf"
                    android:textSize="@dimen/PX32" />

                <RadioButton
                    android:id="@+id/rb_broken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/selector_heart3"
                    android:drawablePadding="@dimen/PX20"
                    android:text="差评"
                    android:textColor="@color/colorafafaf"
                    android:textSize="@dimen/PX32" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/PX2"
                android:background="@color/colorcccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/PX10">

                <EditText
                    android:id="@+id/et_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/PX300"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="写下你对这次的评价吧!"
                    android:maxLength="300"
                    android:textColorHint="@color/colorE7E7E7"
                    android:textSize="@dimen/PX30" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/PX10">

                    <TextView
                        android:id="@+id/tv_lengs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/color000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/300" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/PX20"
                android:paddingRight="@dimen/PX20">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/PX2"
                    android:background="@color/colorcccccc" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/PX20"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/PX10"
                    android:paddingTop="@dimen/PX10">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/selector_tick"
                        android:drawablePadding="@dimen/PX10"
                        android:text="手机号绑定"
                        android:textColor="@color/color5E5E5E"
                        android:textSize="@dimen/PX34" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="你写的评价会以手机号的形式展现"
                        android:textColor="@color/colorE7E7E7" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
