<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lly_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/PX12"
        android:paddingTop="@dimen/PX12">

        <ml.gsy.com.library.views.RoundImageView
            android:id="@+id/img_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:border_color="@color/colorWhite"
            app:border_width="@dimen/PX4"
            android:layout_marginLeft="@dimen/PX30"
            android:layout_marginRight="@dimen/PX30"
            android:scaleType="centerCrop"
            android:src="@drawable/man_headimg" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/PX120"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/PX30"
            android:layout_marginRight="@dimen/PX30"
            android:text="姓名"
            android:textColor="@color/color292929"
            android:textSize="@dimen/PX28" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/PX30"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_phones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="123456789"
                android:autoLink="phone"
                android:textColor="@color/colorFF911B"
                android:textColorLink="@color/colorFF911B"
                android:textSize="@dimen/PX30" />

            <ImageView
                android:id="@+id/img_yiluyong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/PX20"
                android:src="@drawable/yiluyong_icon"
                android:visibility="gone" />

        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorafafaf" />

</LinearLayout>