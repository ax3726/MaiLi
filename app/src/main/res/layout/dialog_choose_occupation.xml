<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <FrameLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/PX36"
            android:background="@drawable/shape_common_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/PX60">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/PX24"
                android:layout_marginTop="@dimen/PX24"
                android:text="选择工种"
                android:textColor="@color/color4d4d4d"
                android:textSize="@dimen/PX46" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/close_icon" />
    </FrameLayout>
</layout>