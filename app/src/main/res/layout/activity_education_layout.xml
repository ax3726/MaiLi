<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/il_head"
            layout="@layout/comon_tarbar_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorF6F3E9"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorF6F3E9"
                    android:padding="@dimen/PX20"
                    android:text="教育经历"
                    android:textSize="@dimen/PX30"
                    android:textStyle="bold" />
                <!--学校-->
                <LinearLayout
                    android:id="@+id/lly_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorFFFFFF"
                    android:padding="@dimen/PX20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/PX20"
                        android:text="学校"
                        android:textColor="@color/color292929"
                        android:textSize="@dimen/PX30" />

                    <EditText
                        android:id="@+id/et_school"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawablePadding="@dimen/PX20"
                        android:drawableRight="@drawable/enter_icon"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="@color/colortextnomal"
                        android:textSize="@dimen/PX30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorE7E7E7" />
                <!--专业-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorFFFFFF"
                    android:padding="@dimen/PX20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/PX20"
                        android:text="专业"
                        android:textColor="@color/color292929"
                        android:textSize="@dimen/PX30" />

                    <EditText
                        android:id="@+id/et_major"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawablePadding="@dimen/PX20"
                        android:drawableRight="@drawable/enter_icon"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="@color/colortextnomal"
                        android:textSize="@dimen/PX30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorE7E7E7" />
                <!--学历-->
                <LinearLayout
                    android:id="@+id/lly_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorFFFFFF"
                    android:padding="@dimen/PX20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/PX20"
                        android:text="学历"
                        android:textColor="@color/color292929"
                        android:textSize="@dimen/PX30" />

                    <TextView
                        android:id="@+id/tv_education"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="@dimen/PX20"
                        android:drawableRight="@drawable/enter_icon"
                        android:gravity="right"
                        android:textColor="@color/colortextnomal"
                        android:textSize="@dimen/PX30" />
                </LinearLayout>

                <!--在校时间段-->
                <RelativeLayout
                    android:id="@+id/lly_school_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/colorFFFFFF"
                    android:padding="@dimen/PX20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在校时间段"
                        android:textColor="@color/color292929"
                        android:textSize="@dimen/PX30" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="请选择"
                            android:textColor="@color/colordcdcdc"
                            android:textSize="@dimen/PX30" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/PX20"
                            android:layout_marginRight="@dimen/PX20"
                            android:text="至"
                            android:textColor="@color/color292929"
                            android:textSize="@dimen/PX30" />

                        <TextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="@dimen/PX20"
                            android:drawableRight="@drawable/enter_icon"
                            android:text="请选择"
                            android:textColor="@color/colordcdcdc"
                            android:textSize="@dimen/PX30" />
                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorF6F3E9"
                    android:padding="@dimen/PX20"
                    android:text="在校经历"
                    android:textSize="@dimen/PX30"
                    android:textStyle="bold" />

                <!--在校经历-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorFFFFFF"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_jingli"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/PX200"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="在校的经历"
                        android:lineSpacingExtra="@dimen/PX8"
                        android:maxLength="300"
                        android:minHeight="@dimen/PX200"
                        android:padding="@dimen/PX20"
                        android:textColor="@color/color292929"
                        android:textSize="@dimen/PX26" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/PX20"
                        android:layout_marginRight="@dimen/PX20"
                        android:background="@color/colorE7E7E7" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/PX20"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_figure"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color000000"
                            android:textSize="@dimen/PX30" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/300"
                            android:textSize="@dimen/PX30" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/PX70"
                    android:layout_marginBottom="@dimen/PX60"
                    android:layout_marginLeft="@dimen/PX40"
                    android:layout_marginRight="@dimen/PX40"
                    android:layout_marginTop="@dimen/PX50"
                    android:background="@drawable/selector_dialog_info_btn1"
                    android:text="完成"
                    android:textColor="@color/colorFFFFFF"
                    android:textSize="@dimen/PX36" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>
