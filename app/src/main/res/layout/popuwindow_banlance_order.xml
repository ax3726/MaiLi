<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/PX20"
            android:background="@color/colorFFd249">

            <TextView
                android:id="@+id/tv_choose_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/PX20"
                android:paddingLeft="@dimen/PX20"
                android:paddingRight="@dimen/PX20"
                android:paddingTop="@dimen/PX20"
                android:text="全选"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/PX30" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/PX20"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共付"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/PX30" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/PX40"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/PX30" />
            </LinearLayout>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/PX40"
            android:layout_marginRight="@dimen/PX40"
            android:layout_marginTop="@dimen/PX20"
            android:text="温馨提示"
            android:textColor="@color/color292929"
            android:textSize="@dimen/PX34" />


        <TextView
            android:id="@id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/PX40"
            android:layout_marginRight="@dimen/PX40"
            android:layout_marginTop="@dimen/PX20"
            android:lineSpacingExtra="@dimen/PX4"
            android:text="完成订单以后不可更改且接单人将立即受到你所付的佣金."
            android:textColor="@color/colorffc000"
            android:textSize="@dimen/PX26" />


        <TextView
            android:id="@id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/PX40"
            android:layout_marginRight="@dimen/PX40"
            android:layout_marginTop="@dimen/PX20"
            android:lineSpacingExtra="@dimen/PX4"
            android:text="确定完成订单吗？"
            android:textColor="@color/color292929"
            android:textSize="@dimen/PX26" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/PX68"
            android:layout_marginBottom="@dimen/PX20"
            android:layout_marginTop="@dimen/PX30"
            android:background="@drawable/shape_common_white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_negative"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/PX68"

                android:layout_marginRight="@dimen/PX30"
                android:background="@drawable/selector_dialog_info_btn"
                android:gravity="center"
                android:paddingLeft="@dimen/PX80"
                android:paddingRight="@dimen/PX80"
                android:text="取消"
                android:textColor="@color/colorffc000"
                android:textSize="@dimen/PX28" />


            <TextView
                android:id="@+id/tv_positive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/PX68"
                android:layout_marginLeft="@dimen/PX30"
                android:background="@drawable/selector_dialog_info_btn1"
                android:gravity="center"
                android:paddingLeft="@dimen/PX80"
                android:paddingRight="@dimen/PX80"
                android:text="确定"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/PX28" />
        </LinearLayout>
    </LinearLayout>

</layout>
