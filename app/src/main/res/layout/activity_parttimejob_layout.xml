<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="stateModel"
            type="com.gsy.ml.ui.common.StateModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/il_head"
            layout="@layout/comon_tarbar2_layout" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:id="@+id/sc_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorf2f2f2"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorFFFFFF"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/PX16"
                            android:paddingLeft="@dimen/PX16"
                            android:paddingTop="@dimen/PX16">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/PX16"
                                    android:textColor="@color/color000000"
                                    android:textSize="@dimen/PX36" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/PX12"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_category"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/PX28" />

                                    <TextView
                                        android:id="@+id/tv_people"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/PX20"
                                        android:textSize="@dimen/PX28" />

                                    <TextView
                                        android:id="@+id/tv_manner"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/PX20"
                                        android:textSize="@dimen/PX28" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_location"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/location_icon"
                                        android:drawablePadding="@dimen/PX8"
                                        android:textSize="@dimen/PX28" />

                                    <TextView
                                        android:id="@+id/tv_grade"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/PX20"
                                        android:drawableLeft="@drawable/crown_icon"
                                        android:drawablePadding="@dimen/PX8"
                                        android:textSize="@dimen/PX28" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/PX60"
                                android:background="@drawable/sword_icon"
                                android:gravity="right|center_vertical"
                                android:orientation="horizontal"
                                android:paddingRight="@dimen/PX10">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.gsy.ml.ui.views.AutofitTextView
                                        android:id="@+id/tv_moneys"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"

                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:textColor="@color/colorFFFFFF"
                                        android:textSize="@dimen/PX34"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="元"
                                        android:textColor="@color/colorFFFFFF"
                                        android:textSize="@dimen/PX20" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/PX10"
                            android:background="@color/colorFFFFFF"
                            android:orientation="vertical"
                            android:padding="@dimen/PX16">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="发布时间："
                                    android:textSize="@dimen/PX28" />

                                <TextView
                                    android:id="@+id/tv_worktime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/color292929"
                                    android:textSize="@dimen/PX28" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lly_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/lly_send"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingTop="@dimen/PX16"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/tv_name_hint"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="寄件人:"
                                        android:textSize="@dimen/PX30" />

                                    <TextView
                                        android:id="@+id/tv_send_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/PX30"
                                        android:text=""
                                        android:textColor="@color/color292929"
                                        android:textSize="@dimen/PX30" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="联系号码:"
                                        android:textSize="@dimen/PX30" />

                                    <TextView
                                        android:id="@+id/tv_send_phone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:autoLink="phone"
                                        android:text=""
                                        android:textColor="@color/colorFF911B"
                                        android:textColorLink="@color/colorFF911B"
                                        android:textSize="@dimen/PX32" />
                                </LinearLayout>

                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/PX16"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_me"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="工作地点："
                                        android:textSize="@dimen/PX28" />


                                    <TextView
                                        android:id="@+id/tv_workplace"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawablePadding="@dimen/PX10"
                                        android:drawableRight="@drawable/address_location_icon"
                                        android:lineSpacingExtra="@dimen/PX6"
                                        android:textColor="@color/color292929"
                                        android:textSize="@dimen/PX28" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lly_addresss"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"></LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/PX10"
                            android:background="@color/colorFFFFFF"
                            android:orientation="vertical"
                            android:padding="@dimen/PX16">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="工作内容："
                                android:textSize="@dimen/PX28" />

                            <TextView
                                android:id="@+id/tv_post"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/PX10"
                                android:lineSpacingExtra="@dimen/PX8"
                                android:textColor="@color/color292929"
                                android:textSize="@dimen/PX28" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/PX1"
                                android:layout_marginTop="@dimen/PX16"
                                android:background="@color/colora5a5a5" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorFFFFFF"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/PX16"
                            android:paddingLeft="@dimen/PX16"
                            android:paddingRight="@dimen/PX16"
                            android:paddingTop="@dimen/PX16">

                            <TextView
                                android:id="@+id/textView29"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorE7E7E7"
                                android:padding="@dimen/PX18"
                                android:text="注意事项：当事人双方对工作内容及要求必须秉承自愿及负责任的原则，若出现工作外的损失，蚂蚁快服平台概不负责。"
                                android:textColor="@color/colora5a5a5"
                                android:textSize="@dimen/PX28" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rly_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorFFFFFF"
                            android:orientation="horizontal"
                            android:padding="@dimen/PX16"

                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/PX30"
                                    android:text="" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="联系电话："
                                    android:textSize="@dimen/PX28" />

                                <TextView
                                    android:id="@+id/tv_phones"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:autoLink="phone"

                                    android:textColor="@color/colorFF911B"
                                    android:textColorLink="@color/colorFF911B"
                                    android:textSize="@dimen/PX40"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <View


                            android:layout_width="match_parent"
                            android:layout_height="100dp" />

                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:id="@+id/lly_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/colorFFFFFF"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/PX16"
                        android:paddingLeft="@dimen/PX100"
                        android:paddingRight="@dimen/PX100"
                        android:paddingTop="@dimen/PX16"
                        android:text="取消"
                        android:textColor="@color/color292929"
                        android:textSize="@dimen/PX36" />

                    <TextView
                        android:id="@+id/tv_commit_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorffc000"
                        android:gravity="center"
                        android:text="立即接单"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/PX36" />
                </LinearLayout>

            </LinearLayout>

            <include
                layout="@layout/widget_layout_empty"
                android:visibility="gone"
                app:stateModel="@{stateModel}" />

        </FrameLayout>
    </LinearLayout>
</layout>
