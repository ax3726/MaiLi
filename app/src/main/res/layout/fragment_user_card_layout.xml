<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <include
            android:id="@+id/in_head"
            layout="@layout/comon_tarbar2_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@drawable/business_card_icon"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical">

                <ml.gsy.com.library.views.RoundImageView
                    android:id="@+id/img_head"
                    android:layout_width="@dimen/PX166"
                    android:layout_height="@dimen/PX166"
                    android:layout_marginTop="@dimen/PX20"
                    android:src="@drawable/head_icon"
                    app:border_color="@color/colorFFd249"
                    app:border_width="@dimen/PX4" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/PX20"
                    android:gravity="center"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:text="好好的唉12"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/PX36" />

                <ImageView
                    android:id="@+id/img_star"
                    android:layout_width="@dimen/PX218"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/stars_five5_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.gsy.ml.ui.views.SquareImageView
                    android:id="@+id/img_bus_qr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/PX80" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/business2_card_icon" />

    </LinearLayout>
</layout>