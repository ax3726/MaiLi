<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFFd249"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_integeral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/PX120" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/PX20"
                    android:layout_marginTop="@dimen/PX10"
                    android:text="我的积分"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/PX10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/PX82"
                android:layout_marginRight="@dimen/PX40"
                android:src="@drawable/sunny_icon" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorFF911B"
                android:gravity="center"
                android:paddingBottom="@dimen/PX10"
                android:paddingLeft="@dimen/PX32"
                android:paddingRight="@dimen/PX32"
                android:paddingTop="@dimen/PX10"
                android:text="积分明细"
                android:textColor="@color/colorFFFFFF"
                android:textSize="@dimen/PX40" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/PX40"
                android:layout_marginRight="@dimen/PX82"
                android:src="@drawable/cloudy_icon" />
        </LinearLayout>

        <View
            android:id="@+id/v_xian"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorcccccc" />

    </LinearLayout>
</layout>
