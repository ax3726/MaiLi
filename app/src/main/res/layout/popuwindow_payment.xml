<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <!--关闭-->
        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/PX20"
            android:src="@drawable/down_order_cancel" />

        <!--支付窗口-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/PX10"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorFFFFFF"
                android:orientation="vertical"
                android:paddingBottom="@dimen/PX40"
                android:paddingTop="@dimen/PX40">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/PX20"
                    android:layout_marginTop="@dimen/PX40"
                    android:src="@drawable/moneys_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/PX20"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="支付金额："
                        android:textColor="@color/color5E5E5E"
                        android:textSize="@dimen/PX28" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="￥145.0"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/PX34" />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/PX20"
                    android:layout_marginLeft="@dimen/PX40"
                    android:layout_marginRight="@dimen/PX40"
                    app:cardCornerRadius="@dimen/PX5"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/lly_remaining_sum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorffc000"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/PX5"
                        android:paddingTop="@dimen/PX5">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="余额支付："
                                android:textColor="@color/colorFFFFFF"
                                android:textSize="@dimen/PX28" />

                            <TextView
                                android:id="@+id/tv_banlance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="￥154.0"
                                android:textColor="@color/colorFF0400"
                                android:textSize="@dimen/PX34" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_cash_deposit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="可支付余额包含保证金300元"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/PX24" />
                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/tv_alipay_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/PX20"
                    android:layout_marginLeft="@dimen/PX40"
                    android:layout_marginRight="@dimen/PX40"
                    android:background="@drawable/selector_dialog_info_btn"
                    android:gravity="center"
                    android:paddingBottom="@dimen/PX20"
                    android:paddingTop="@dimen/PX20"
                    android:text="支付宝支付"
                    android:textColor="@color/colorffc000"
                    android:textSize="@dimen/PX30" />

                <TextView
                    android:id="@+id/tv_weixin_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/PX40"
                    android:layout_marginLeft="@dimen/PX40"
                    android:layout_marginRight="@dimen/PX40"
                    android:background="@drawable/selector_dialog_info_btn"
                    android:gravity="center"
                    android:paddingBottom="@dimen/PX20"
                    android:paddingTop="@dimen/PX20"
                    android:text="微信支付"
                    android:textColor="@color/colorffc000"
                    android:textSize="@dimen/PX30" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>
