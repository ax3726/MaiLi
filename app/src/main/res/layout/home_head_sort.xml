<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/lly_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorWhite"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/home_new_order"
                android:drawablePadding="@dimen/PX15"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/PX20"
                android:paddingLeft="@dimen/PX15"
                android:paddingTop="@dimen/PX20"
                android:text="最新发布"
                android:textSize="@dimen/PX30"
                android:textColor="@color/color292929" />

            <ImageView
                android:id="@+id/img_refersh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/PX20"
                android:src="@drawable/home_refersh_cion" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorafafaf" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/PX20"
            android:paddingTop="@dimen/PX20">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/PX8"
                    android:drawableRight="@drawable/choose_add_down_icon"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="全部"
                    android:textColor="@color/color292929"
                    android:textSize="@dimen/PX28" />


            </LinearLayout>


            <View
                android:layout_width="@dimen/PX3"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/colorcccccc" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/PX8"
                    android:drawableRight="@drawable/choose_add_down_icon"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="职位类型"
                    android:textColor="@color/color292929"
                    android:textSize="@dimen/PX28" />


            </LinearLayout>


            <View
                android:layout_width="@dimen/PX3"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/colorcccccc" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/PX8"
                    android:drawableRight="@drawable/choose_add_down_icon"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="推荐排序"
                    android:textColor="@color/color292929"
                    android:textSize="@dimen/PX28" />


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorafafaf" />
    </LinearLayout>
</layout>