<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="stateModel"
            type="com.gsy.ml.ui.common.StateModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/il_head"
            layout="@layout/comon_tarbar2_layout" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--发单人查看-->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorFFFFFF"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/PX20"
                        android:layout_marginRight="@dimen/PX20"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/PX16"
                            android:layout_marginTop="@dimen/PX20"
                            android:text=""
                            android:textColor="@color/color4d4d4d"
                            android:textSize="@dimen/PX34" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/PX16"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                            android:visibility="gone"
                                android:text="求购"
                                android:textColor="@color/colorTheme"
                                android:textSize="@dimen/PX28" />
                            <TextView
                                android:id="@+id/tv_moneys"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorfbc700"
                                android:textSize="@dimen/PX32" />

                            <TextView
                                android:id="@+id/tv_modification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/PX30"
                                android:background="@drawable/selector_dialog_info_btn"
                                android:paddingBottom="@dimen/PX3"
                                android:paddingLeft="@dimen/PX16"
                                android:paddingRight="@dimen/PX16"
                                android:paddingTop="@dimen/PX3"
                                android:text="修改"
                                android:textColor="@color/colorfbc700" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/dizh_icon"
                                android:drawablePadding="@dimen/PX4"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/PX20" />

                            <TextView
                                android:id="@+id/tv_worktime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/PX30"
                                android:drawableLeft="@drawable/time1_icon"
                                android:drawablePadding="@dimen/PX4"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/PX20" />

                            <TextView
                                android:id="@+id/textView32"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/PX30"
                                android:drawableLeft="@drawable/gou_icon"
                                android:drawablePadding="@dimen/PX4"
                                android:gravity="center_vertical"
                                android:text="沟通人数10人"
                                android:textSize="@dimen/PX20"
                                android:visibility="gone" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1px"
                            android:layout_marginTop="@dimen/PX20"
                            android:background="@color/colorcccccc" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/PX20"
                        android:layout_marginRight="@dimen/PX20"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/PX20"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="兼职类型："
                                android:textSize="@dimen/PX28" />

                            <TextView
                                android:id="@+id/tv_type_of_work"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color292929"
                                android:textSize="@dimen/PX28" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/PX20"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="招聘人数："
                                android:textSize="@dimen/PX28" />

                            <TextView
                                android:id="@+id/tv_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color292929"
                                android:textSize="@dimen/PX28" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lly_pay_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/PX20"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支付方式："
                                android:textSize="@dimen/PX28" />

                            <TextView
                                android:id="@+id/tv_pay_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color292929"
                                android:textSize="@dimen/PX28" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/PX16"
                        android:layout_marginBottom="@dimen/PX20"
                        android:layout_marginTop="@dimen/PX20"
                        android:background="@color/colorEEEEEE" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/PX20"
                        android:layout_marginRight="@dimen/PX20"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/PX6"
                                android:layout_height="@dimen/PX26"
                                android:background="@color/colorfbc700" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/PX10"
                                android:text="工作内容："
                                android:textSize="@dimen/PX28" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/PX10"
                            android:paddingTop="@dimen/PX10">


                            <TextView
                                android:id="@+id/tv_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/PX16"
                                android:lineSpacingExtra="@dimen/PX8"
                                android:textColor="@color/color292929"
                                android:textSize="@dimen/PX28" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/PX20"
                        android:layout_marginLeft="@dimen/PX20"
                        android:layout_marginRight="@dimen/PX20"

                        android:background="@color/colorcccccc" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/PX20"
                        android:layout_marginRight="@dimen/PX20"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/PX6"
                                android:layout_height="@dimen/PX26"
                                android:background="@color/colorfbc700" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/PX10"
                                android:text="工作时间："
                                android:textSize="@dimen/PX28" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical"
                            android:paddingBottom="@dimen/PX10"
                            android:paddingTop="@dimen/PX10">


                            <TextView
                                android:id="@+id/tv_times"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/PX16"
                                android:lineSpacingExtra="@dimen/PX8"
                                android:textColor="@color/color292929"
                                android:textSize="@dimen/PX28" />


                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/view_work_address_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/PX16"
                        android:layout_marginBottom="@dimen/PX20"
                        android:background="@color/colorEEEEEE" />

                    <LinearLayout
                        android:id="@+id/lly_work_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/PX20"
                        android:layout_marginLeft="@dimen/PX20"
                        android:layout_marginRight="@dimen/PX20"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/PX6"
                                android:layout_height="@dimen/PX26"
                                android:background="@color/colorfbc700" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/PX10"
                                android:text="工作地点："
                                android:textSize="@dimen/PX28" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/PX200">

                            <com.amap.api.maps.TextureMapView
                                android:id="@+id/mv_add"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/PX20"
                                android:background="@color/colorE7E7E7" />

                            <LinearLayout
                                android:id="@+id/lly_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/PX20"
                                android:layout_marginRight="@dimen/PX20"
                                android:background="@color/colorFFFFFF"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/PX20">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/didian_icon" />

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/PX20"
                                    android:layout_marginRight="@dimen/PX20"
                                    android:layout_weight="1"
                                    android:textColor="@color/colortextnomal"
                                    android:textSize="@dimen/PX27" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/rights_icon" />

                            </LinearLayout>


                        </FrameLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/PX16"
                        android:layout_marginBottom="@dimen/PX20"
                        android:layout_marginTop="@dimen/PX20"
                        android:background="@color/colorEEEEEE" />


                    <LinearLayout
                        android:id="@+id/lly_order_type_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/PX20"
                        android:layout_marginRight="@dimen/PX20"
                        android:layout_marginTop="@dimen/PX20"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/PX6"
                                android:layout_height="@dimen/PX26"
                                android:background="@color/colorfbc700" />

                            <TextView
                                android:id="@+id/tv_order_type_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/PX10"
                                android:text="接单人信息："
                                android:textSize="@dimen/PX28" />
                        </LinearLayout>


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rc_type_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/colorWhite" />

                </LinearLayout>

            </ScrollView>


            <RelativeLayout
                android:id="@+id/rly_chat"
                android:layout_width="@dimen/PX170"
                android:layout_height="@dimen/PX170"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="@dimen/PX60"
                android:layout_marginRight="@dimen/PX30"
                android:background="@drawable/shape_order_btn_chat"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/message_chat_num_icon" />

                <TextView
                    android:id="@+id/tv_chat_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_chat"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/PX10"
                    android:text="已沟通\n(255)人"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/PX30" />


            </RelativeLayout>


            <include
                layout="@layout/widget_layout_empty"
                app:stateModel="@{stateModel}" />
        </FrameLayout>


    </LinearLayout>
</layout>
