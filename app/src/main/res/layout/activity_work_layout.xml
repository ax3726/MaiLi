<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorF6F3E9"
        android:orientation="vertical">

        <include
            android:id="@+id/il_head"
            layout="@layout/comon_tarbar_layout" />

        <!--职位类型 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFFFFFF"
            android:padding="@dimen/PX20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/PX20"
                android:text="职位类型" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/PX20"
                android:drawableRight="@drawable/enter_icon"
                android:gravity="right" />
        </LinearLayout>

        <!--职位名称-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/colorFFFFFF"
            android:padding="@dimen/PX20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/PX20"
                android:text="职位名称" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/PX20"
                android:drawableRight="@drawable/enter_icon"
                android:gravity="right"
                android:hint="选填"
                android:textColorHint="@color/colorafafaf" />
        </LinearLayout>

        <!--公司名称-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFFFFFF"
            android:padding="@dimen/PX20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/PX20"
                android:text="公司名称" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/PX20"
                android:drawableRight="@drawable/enter_icon"
                android:gravity="right"
                android:textColorHint="@color/colorafafaf" />
        </LinearLayout>

        <!--行业名称-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFFFFFF"
            android:padding="@dimen/PX20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/PX20"
                android:text="行业名称" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/PX20"
                android:drawableRight="@drawable/enter_icon"
                android:gravity="right"
                android:textColorHint="@color/colorafafaf" />
        </LinearLayout>

        <!--在职时间段-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/colorFFFFFF"
            android:padding="@dimen/PX20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在职时间段" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="请选择"
                    android:textColor="@color/colorafafaf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/PX20"
                    android:layout_marginRight="@dimen/PX20"
                    android:text="至"
                    android:textColor="@color/color000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="@dimen/PX20"
                    android:drawableRight="@drawable/enter_icon"
                    android:text="请选择"
                    android:textColor="@color/colorafafaf" />
            </LinearLayout>

        </RelativeLayout>

        <!--所属部门-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/colorFFFFFF"
            android:padding="@dimen/PX20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/PX20"
                android:text="所属部门" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="@dimen/PX20"
                android:drawableRight="@drawable/enter_icon"
                android:gravity="right"
                android:hint="选填"
                android:textColorHint="@color/colorafafaf" />
        </LinearLayout>

        <!--工作内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/colorFFFFFF"
            android:padding="@dimen/PX20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/PX20"
                android:text="工作内容" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/PX20"
                android:drawableRight="@drawable/enter_icon"
                android:gravity="right"
                android:hint="选填"
                android:textColorHint="@color/colorafafaf" />
        </LinearLayout>

        <!--工作业绩-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/colorFFFFFF"
            android:padding="@dimen/PX20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/PX20"
                android:text="工作业绩" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/PX20"
                android:drawableRight="@drawable/enter_icon"
                android:gravity="right"
                android:hint="选填"
                android:textColorHint="@color/colorafafaf" />
        </LinearLayout>

        <!--完成-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/PX70"
            android:layout_marginLeft="@dimen/PX40"
            android:layout_marginRight="@dimen/PX40"
            android:layout_marginTop="@dimen/PX50"
            android:background="@drawable/selector_dialog_info_btn1"
            android:text="完成"
            android:textColor="@color/colorFFFFFF"
            android:textSize="@dimen/PX36" />
    </LinearLayout>
</layout>