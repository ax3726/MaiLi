<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lly_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/PX16"
        android:paddingLeft="@dimen/PX16"
        android:paddingRight="@dimen/PX16"
        android:paddingTop="@dimen/PX16">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/PX120"
            android:layout_height="@dimen/PX120"
            android:src="@drawable/notice1" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/PX10"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/PX10"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:text="你有新的哈哈哈哈!"
                    android:textColor="@color/color292929"
                    android:textSize="@dimen/PX32" />

                <View
                    android:id="@+id/view_notice"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="@dimen/PX4"

                    android:layout_toRightOf="@id/tv_title"
                    android:background="@drawable/shape_round_red" />


                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2017年4月31日 9:20"
                    android:textColor="@color/colortextnomal"
                    android:textSize="@dimen/PX28" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/PX10"
                android:singleLine="true"
                android:text="我是通知的内容哗哗哗"
                android:textColor="@color/colortextnomal"
                android:textSize="@dimen/PX28" />


        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorafafaf" />
</LinearLayout>