<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/il_head"
            layout="@layout/comon_tarbar_layout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorEEEEEE"
            android:padding="@dimen/PX20"
            android:text="提示：为了保障您的账号安全，请设置/修改支付密码"
            android:textColor="@color/colorFFAE00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFFFFFF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:hint="手机号码"
                    android:padding="14dp"
                    android:singleLine="true"
                    android:textColor="@color/color292929"
                    android:textColorHint="@color/editTextColor"
                    android:textCursorDrawable="@drawable/shape_cursor_et"
                    android:textSize="@dimen/PX30" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/PX20"
                android:background="@color/colorafafaf" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="phone"
                    android:maxLength="6"
                    android:padding="14dp"
                    android:singleLine="true"
                    android:textColorHint="@color/editTextColor"
                    android:textCursorDrawable="@drawable/shape_cursor_et"
                    android:textSize="@dimen/PX30" />

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/et_code"
                    android:layout_alignBottom="@+id/et_code"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/PX20"
                    android:text="获取验证码"
                    android:textColor="@color/colorffc000"
                    android:textSize="@dimen/PX32" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/PX20"
                android:background="@color/colorafafaf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入六位数的支付密码"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:padding="14dp"
                    android:singleLine="true"
                    android:textColorHint="@color/editTextColor"
                    android:textCursorDrawable="@drawable/shape_cursor_et"
                    android:textSize="@dimen/PX30" />

                <ImageView
                    android:id="@+id/iv_didian"
                    android:layout_marginRight="@dimen/PX20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/selector_forget_suo" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PX20"
            android:gravity="center">

            <Button
                android:id="@+id/bt_registration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/PX68"
                android:layout_margin="@dimen/PX44"
                android:background="@drawable/shape_style_btn"
                android:text="确定"
                android:textColor="@color/colorFFFFFF"
                android:textSize="@dimen/PX36" />
        </LinearLayout>
    </LinearLayout>
</layout>
