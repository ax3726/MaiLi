                android:topRightRadius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/><!-- 设置圆角半径 -->
            <stroke
                android:width="1dp"
                android:color="#dddddd" />
        </shape>
    </item>
